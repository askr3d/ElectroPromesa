@using ElectroPromesa.ViewModels.Partido
@model CreatePartidoViewModel
@{
    ViewData["Title"] = "Crear Partido";
}

<div class="d-flex justify-content-between">
    <h1>Crear Partido Político</h1>
    <a class="d-flex align-items-center gap-2 text-secondary fs-4" asp-action="Index">
        Regresar
    </a>
</div>

<form method="post" asp-controller="Partido" asp-action="Create" enctype="multipart/form-data" class="w-100 my-4 d-flex flex-column mx-auto gap-4">
    <div class="d-flex flex-column gap-4 mb-4 align-items-center">
        <div class="w-50">
            <div class="mb-3">
                <label asp-for="Nombre" class="form-label"></label>
                <input asp-for="Nombre" type="text" class="form-control">
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Abreviatura" class="form-label"></label>
                <input asp-for="Abreviatura" type="text" class="form-control">
                <span asp-validation-for="Abreviatura" class="text-danger"></span>
            </div>
        </div>
        <div class="w-50 text-center">
            <p class="fs-4">
                Imagen Partido:
            </p>
            <span asp-validation-for="FotoUrl" class="text-danger"></span>
            <label asp-for="FotoUrl" class="w-100 h-100 d-flex justify-content-center" role="button">
                <div id="fotoLabel" class="d-flex flex-column align-items-center justify-content-center h-100 text-secondary">
                    <svg xmlns="http://www.w3.org/2000/svg" width="40" fill="currentColor" class="bi bi-upload" viewBox="0 0 16 16">
                        <path d="M.5 9.9a.5.5 0 0 1 .5.5v2.5a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1v-2.5a.5.5 0 0 1 1 0v2.5a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2v-2.5a.5.5 0 0 1 .5-.5" />
                        <path d="M7.646 1.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1-.708.708L8.5 2.707V11.5a.5.5 0 0 1-1 0V2.707L5.354 4.854a.5.5 0 1 1-.708-.708z" />
                    </svg>
                    <span>
                        Subir Imagen
                    </span>
                </div>
                <img
                    style="object-fit: fill"
                    class="d-none shadow" width="200px" height="200px" id="fotoPreview" src="" alt="Foto Partido" />
            </label>
            <input style="visibility:hidden; position:absolute;" asp-for="FotoUrl" type="file" accept=".jpg,.jpeg,.svg,.png" />
        </div>
    </div>
    <button type="submit" class="btn btn-primary d-block mx-auto px-4 py-2 fw-bold">
        Guardar
    </button>
</form>

@section Scripts {
    <script src="~/js/uploadImages.js"></script>
}